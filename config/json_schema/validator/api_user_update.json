{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://api.example.com/profile.json#",
    "type": "object",
    "properties": {
        "firstname": {
            "type": "string",
            "minLenght": 3,
            "maxLength": 128
        },
        "lastname": {
            "type": "string",
            "minLenght": 3,
            "maxLength": 128
        },
        "email": {
            "type": "string",
            "format": "email"
        },
        "password": {
            "type": "string",
            "minLenght": 8,
            "maxLength": 128
        },
        "password_repeat": {
            "type": "string",
            "minLenght": 8,
            "maxLength": 128
        }
    },
    "required": [
        "firstname",
        "lastname",
        "email",
        "password",
        "password_repeat"
    ],
    "additionalProperties": false
}